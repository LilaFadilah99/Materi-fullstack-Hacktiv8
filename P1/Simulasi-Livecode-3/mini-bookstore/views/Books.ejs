<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books</title>
</head>
<body>
  <center>
    <!-- <%= JSON.stringify(books) %> -->
    <h1>Books</h1>
    <button>
      <a href="/">Home</a>
    </button>
    <br><br>
    <button>
      <a href="/books/add">Add New Book</a>
    </button>
    <button>
      <a href="/books/emptyList">Empty Book</a>
    </button>
    <br><br>
    <table border="1">
      <thead>
        <th>No.</th>
        <th>Title</th>
        <th>ISBN</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Author</th>
        <th>Action</th>
      </thead>
      <tbody>
        <% books.forEach((book, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= book.title %></td>
            <td><%= book.isbn %></td>
            <td><%= book.stock %></td>
            <td><%= book.formatPrice %></td>
            <td><%= book.Author.name %></td>
            <td>
              <button>
                <a href="/books/buy/<%= book.id %>">Buy</a>
              </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </center>
</body>
</html>