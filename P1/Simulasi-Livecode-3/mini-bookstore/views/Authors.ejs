<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Authors</title>
</head>
<body>
  <center>
    <!-- <%= JSON.stringify(authors) %> -->
    <h1>Authors</h1>
    <button>
      <a href="/">Home</a>
    </button>
    <br><br>
    <table border="1">
      <thead>
        <th>No.</th>
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Jumlah Buku</th>
      </thead>
      <tbody>
        <% authors.forEach((author, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= author.name %></td>
            <td><%= author.age %></td>
            <td><%= author.gender %></td>
            <td><%= author.Books.length %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </center>
</body>
</html>