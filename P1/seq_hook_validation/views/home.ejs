<%- include('partials/header') %>
<a class="d-flex justify-content-center" href="/add">Add User</a>

<center>
  <form action="/search" method="post">
    <input type="search" name="first_name" placeholder="post search">
    <input type="submit" value="Search">
  </form>
</center>
<center>
  <form action="/" method="get">
    <input type="search" name="first_name" placeholder="get search">
    <input type="submit" value="Search">
  </form>
</center>

<div class="container w-80">  
  <table class="table mb-10">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Gender</th>
        <th scope="col">DoB</th>
        <th scope="col">Email</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.gender %></td>
          <td><%= new Date(user.dob).toLocaleDateString() %></td>
          <td><%= user.email %></td>
          <td><a href="/edit/<%= user.id %>" class="btn btn-warning">Edit</a> | <a href="/delete/<%= user.id %>" class="btn btn-danger">Delete</a></td>
        </tr>
      <% }); %>
    </tbody>
    <hr>
    </table>
</div>
<%- include('partials/footer') %>